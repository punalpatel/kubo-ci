#!/bin/bash
set -e -o pipefail
set -x

bin_dir=$(dirname "${BASH_SOURCE[0]}")
CONCOURSE_DIR="$(cd "$bin_dir/.."; pwd)"

print_usage() {
  echo "Usage: $0 <iaas>"
}

deploy() {
  manifest_template="$1"

  manifest_file=$(mktemp)

  concourse_secrets_lpass_note_id=$(bosh-cli int "$CONCOURSE_DIR/$IAAS/director.yml" --path='/concourse_secrets_lpass_note_id')
  private_yml=$(lpass show "$(bosh-cli int "$CONCOURSE_DIR/$IAAS/director.yml" --path='/private_note_id')" --notes)

  BOSH_CLIENT=admin
  BOSH_CLIENT_SECRET=$(bosh-cli int <(echo "$private_yml") --path /admin_password)
  BOSH_CA_CERT=$(bosh-cli int <(echo "$private_yml") --path /default_ca/ca)
  BOSH_ENVIRONMENT=$(bosh-cli int "$CONCOURSE_DIR/$IAAS/director.yml" --path /internal_ip)
  export BOSH_CLIENT BOSH_CLIENT_SECRET BOSH_CA_CERT BOSH_ENVIRONMENT


  if [ -z "$(bosh-cli stemcells | grep trusty)" ]; then
    local stemcell_version=3468.13
    local iaas_extension=
    case ${IAAS} in
    vsphere)
      iaas_extension=${IAAS}-esxi
      ;;
    aws)
      iaas_extension=${IAAS}-xen-hvm
      ;;
    openstack)
      iaas_extension=${IAAS}-kvm
      ;;
    gcp)
      iaas_extension=${IAAS}-kvm
      ;;
    esac

    bosh-cli upload-stemcell "https://bosh.io/d/stemcells/bosh-${iaas_extension}-ubuntu-trusty-go_agent?v=${stemcell_version}"
  fi

  bosh-cli interpolate "$manifest_template"  \
      --vars-file "$CONCOURSE_DIR/$IAAS/director.yml" \
      --vars-file <(echo "$private_yml") \
      --vars-file <(bosh int <(lpass show --note "$concourse_secrets_lpass_note_id")) \
      > "$manifest_file"

  echo "Updating cloud config..."

  bosh-cli -n update-cloud-config "$CONCOURSE_DIR/$IAAS/cloud-config.yml"  \
      --vars-file "$CONCOURSE_DIR/$IAAS/director.yml"

  echo "Deploying concourse..."

  deployment_name=$(bosh-cli int "$manifest_file" --path /name)

  echo ${deployment_name}

  bosh-cli -n deploy "$manifest_file" \
      -d "$deployment_name" \
      --vars-file <(echo "$private_yml")

  rm "$manifest_file"
}

IAAS="$1"

if [ -z "$IAAS" ]; then
  print_usage
  exit 1
fi

set -u

if [ -f "$CONCOURSE_DIR/$IAAS/concourse.yml" ]; then
  deploy "$CONCOURSE_DIR/$IAAS/concourse.yml"
elif [ -f "$CONCOURSE_DIR/$IAAS/workers.yml" ]; then
  deploy "$CONCOURSE_DIR/$IAAS/workers.yml"
else
  echo "ERROR: Expected to find either [$CONCOURSE_DIR/$IAAS/concourse.yml] or [$CONCOURSE_DIR/$IAAS/workers.yml]"
  exit 1
fi
